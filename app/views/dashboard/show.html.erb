<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Dashboard</h1>
  <%= render "ui/button", label: "Create schedule link", href: new_schedule_link_path, variant: :primary, size: :sm %>
</div>

<div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-8">
  <%= render layout: "ui/card" do %>
    <div class="text-center">
      <p class="text-3xl font-bold text-gray-900"><%= @bookings_this_week %></p>
      <p class="text-sm text-gray-500 mt-1">Bookings this week</p>
    </div>
  <% end %>

  <%= render layout: "ui/card" do %>
    <div class="text-center">
      <p class="text-3xl font-bold text-gray-900"><%= @schedule_links_count %></p>
      <p class="text-sm text-gray-500 mt-1">Schedule links</p>
    </div>
  <% end %>
</div>

<div class="space-y-8">
  <div>
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Upcoming bookings</h2>
    <% if @upcoming_bookings.any? %>
      <%= render layout: "ui/card" do %>
        <div class="-mx-6 -my-4 overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Invitee</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Meeting</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date & Time</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @upcoming_bookings.each do |booking| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= booking.invitee_name %></div>
                    <div class="text-sm text-gray-500"><%= booking.invitee_email %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= booking.schedule_link.meeting_name %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900"><%= booking.start_time.strftime("%b %-d, %Y") %></div>
                    <div class="text-sm text-gray-500">
                      <%= booking.start_time.strftime("%-I:%M %p") %> &ndash; <%= booking.end_time.strftime("%-I:%M %p") %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <%= render "ui/badge", label: booking.status.capitalize, color: booking.status == "confirmed" ? :green : :red %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                    <%= link_to "View", admin_booking_path(booking), class: "text-gray-600 hover:text-gray-900 font-medium" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
    <% else %>
      <%= render "ui/empty_state",
        title: "No upcoming bookings",
        description: "Create a schedule link to start accepting bookings.",
        action_label: "Create schedule link",
        action_path: new_schedule_link_path %>
    <% end %>
  </div>

  <div>
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Recent bookings</h2>
    <% if @recent_bookings.any? %>
      <%= render layout: "ui/card" do %>
        <div class="-mx-6 -my-4 overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Invitee</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Meeting</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date & Time</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @recent_bookings.each do |booking| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm font-medium text-gray-900"><%= booking.invitee_name %></div>
                    <div class="text-sm text-gray-500"><%= booking.invitee_email %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= booking.schedule_link.meeting_name %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="text-sm text-gray-900"><%= booking.start_time.strftime("%b %-d, %Y") %></div>
                    <div class="text-sm text-gray-500">
                      <%= booking.start_time.strftime("%-I:%M %p") %> &ndash; <%= booking.end_time.strftime("%-I:%M %p") %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <%= render "ui/badge", label: booking.status.capitalize, color: booking.status == "confirmed" ? :green : :red %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                    <%= link_to "View", admin_booking_path(booking), class: "text-gray-600 hover:text-gray-900 font-medium" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
    <% else %>
      <%= render "ui/empty_state", title: "No recent bookings" %>
    <% end %>
  </div>
</div>
