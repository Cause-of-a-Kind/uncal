<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Invitations</h1>
  <%= render "ui/button", label: "Invite teammate", href: new_invitation_path, variant: :primary %>
</div>

<% if @pending_invitations.any? %>
  <%= render layout: "ui/card" do %>
    <div class="-mx-6 -my-4">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Sent</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Expires</th>
            <th class="px-6 py-3"></th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <% @pending_invitations.each do |invitation| %>
            <tr>
              <td class="px-6 py-4 text-sm text-gray-900"><%= invitation.email %></td>
              <td class="px-6 py-4 text-sm text-gray-500"><%= time_ago_in_words(invitation.created_at) %> ago</td>
              <td class="px-6 py-4 text-sm text-gray-500"><%= time_ago_in_words(invitation.expires_at) %></td>
              <td class="px-6 py-4 text-right">
                <%= button_to "Cancel", invitation_path(invitation), method: :delete, class: "text-sm text-red-600 hover:text-red-800", data: { turbo_confirm: "Cancel this invitation?" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
<% else %>
  <%= render "ui/empty_state",
    title: "No pending invitations",
    description: "Invite teammates to join your Uncal workspace.",
    action_label: "Invite teammate",
    action_path: new_invitation_path %>
<% end %>
