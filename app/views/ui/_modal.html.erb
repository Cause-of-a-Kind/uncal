<%# locals: (title:) %>
<div class="fixed inset-0 z-50 overflow-y-auto" data-controller="modal">
  <div class="flex min-h-full items-center justify-center p-4">
    <div class="fixed inset-0 bg-gray-500/75 transition-opacity" data-action="click->modal#close"></div>

    <div class="relative transform overflow-hidden rounded-xl bg-white shadow-xl transition-all w-full sm:max-w-lg">
      <div class="border-b border-gray-200 px-6 py-4 flex items-center justify-between">
        <h3 class="text-lg font-semibold text-gray-900"><%= title %></h3>
        <button type="button" class="text-gray-400 hover:text-gray-500" data-action="modal#close">
          <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="px-6 py-4">
        <%= yield %>
      </div>
    </div>
  </div>
</div>
