<%= link_to "&larr; Back to schedule link".html_safe, schedule_link_path(@schedule_link), class: "text-sm text-gray-600 hover:text-gray-900" %>

<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6 mt-2">
  <h1 class="text-2xl font-bold text-gray-900">Availability â€” <%= @schedule_link.name %></h1>
  <div class="flex flex-wrap gap-2">
    <%= render "ui/button", label: "Copy from Link", href: copy_schedule_link_availability_windows_path(@schedule_link), variant: :secondary %>
  </div>
</div>

<p class="text-sm text-gray-500 mb-4">
  Times are in <strong><%= @schedule_link.timezone %></strong> timezone.
</p>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 xl:grid-cols-7 gap-4">
  <% (0..6).each do |day| %>
    <%= render "availability_windows/day_column",
      day_of_week: day,
      windows: @windows_by_day[day] || [],
      schedule_link: @schedule_link %>
  <% end %>
</div>
