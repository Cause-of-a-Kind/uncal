<%= render layout: "ui/card", locals: { title: "Forgot your password?" } do %>
  <p class="text-sm text-gray-500 mb-4">Enter your email address and we'll send you reset instructions.</p>

  <%= form_with url: passwords_path do |form| %>
    <%= render "ui/form_field", form: form, field: :email_address, type: :email, required: true, placeholder: "you@example.com" %>
    <%= render "ui/button", label: "Email reset instructions" %>
  <% end %>

  <div class="mt-4 text-center">
    <%= link_to "Back to sign in", new_session_path, class: "text-sm text-gray-600 hover:text-gray-900" %>
  </div>
<% end %>
