<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold text-gray-900">Schedule Links</h1>
  <%= render "ui/button", label: "New Schedule Link", href: new_schedule_link_path %>
</div>

<% if @schedule_links.any? %>
  <%= render layout: "ui/card" do %>
    <div class="-mx-6 -my-4">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Duration</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider"></th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @schedule_links.each do |link| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900"><%= link.name %></div>
                <div class="text-sm text-gray-500"><%= link.meeting_name %></div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= link.meeting_duration_minutes %> min
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= render "ui/badge", label: link.status.capitalize, color: link.status == "active" ? :green : :gray %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                <%= link_to "View", schedule_link_path(link), class: "text-gray-600 hover:text-gray-900 font-medium" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
<% else %>
  <%= render "ui/empty_state",
    title: "No schedule links yet",
    description: "Create your first schedule link to start accepting bookings.",
    action_label: "New Schedule Link",
    action_path: new_schedule_link_path %>
<% end %>
