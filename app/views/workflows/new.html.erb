<h1 class="text-2xl font-bold text-gray-900 mb-6">New Workflow</h1>

<%= form_with model: @workflow, class: "space-y-6" do |form| %>
  <%= render layout: "ui/card", locals: { title: "Workflow Details" } do %>
    <%= render "ui/form_field", form: form, field: :name, label: "Name", required: true, hint: "A name to identify this workflow." %>
  <% end %>

  <div class="flex gap-3">
    <%= render "ui/button", label: "Create Workflow" %>
    <%= render "ui/button", label: "Cancel", href: workflows_path, variant: :ghost %>
  </div>
<% end %>
